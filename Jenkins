pipeline {
    agent any 
    stages {
        stage("checkout") {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'github', url: 'https://github.com/sarika-03/inventory_tracker']])
                script {
                    env.BRANCH_NAME = "main"
                }
            }
        }
        stage("setup") {
            steps {
                sh '''
                python3 -m venv venv && \
                source venv/bin/activate && \
                pip install --upgrade pip && \
                pip install -r docker/requirements.txt && \
                pip install pytest && \
                ls -la venv/bin/
           '''
            }
        }

        stage("Docker Build Image") {
            steps {
                sh "docker build -t sarika1731/inventory:3.12-slim ."
            }
        }

        stage('Login to Docker Hub') {
            steps {              
                   sh '''
                    echo "$DOCKERHUB_CREDENTIALS_PSW" | docker login -u "$DOCKERHUB_CREDENTIALS_USR" --password-stdin
                '''
            }
        }

        stage("push image") {
            steps {
                sh """
                docker tag deploy:3.12-slim sarika1731/inventory:3.12-slim 
                docker push sarika1731/inventory:3.12-slim
                """
            }
        }
    }

    post {
        success {
            emailext(
                body: """Hello Team,

The Jenkins pipeline job has SUCCESSFULLY completed.

Job: ${JOB_NAME}
Build Number: ${BUILD_NUMBER}
Build URL: ${BUILD_URL}
Branch: ${BRANCH_NAME}

Regards,
Jenkins CI/CD
""",
                recipientProviders: [developers()],
                subject: "SUCCESS: Job ${JOB_NAME} [${BUILD_NUMBER}]",
                to: "sarikasharma9711@gmail.com"
            )
        }

        failure {
            emailext(
                body: """Hello Team,

The Jenkins pipeline job has NOT SUCCESSFULLY completed.

Job: ${JOB_NAME}
Build Number: ${BUILD_NUMBER}
Build URL: ${BUILD_URL}
Branch: ${BRANCH_NAME}

Please check the console output for details:
${BUILD_URL}console

Regards,
Jenkins CI/CD
""",
                recipientProviders: [developers()],
                subject: "FAILURE: Job ${JOB_NAME} [${BUILD_NUMBER}]",
                to: "sarikasharma9711@gmail.com"
            )
        }
    }
}
